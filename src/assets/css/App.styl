
*
  box-sizing border-box
  font-family 'montserrat',Arial,sans-serif
*:focus{
  outline: none;
}
.btn
  background-color #22b14c
  border 0
  height 48px
  float right
  color #fff
  font-weight bold
  font-size 14px
  cursor pointer
  transition all 0.3s linear
  &:hover
    background-color rgba(34,177,76,.8)
body
  background-color #fff
a
  text-decoration none
  color: black
  &.link-azul
    color #2189e0
    font-size 0.8em
    &:hover
      text-decoration underline
.verde
  color #22b14c
  transition-duration .3s
  &:hover
    color rgba(34,177,76,.6)
.container
  max-width 1200px
  min-width 900px
  margin 0 auto
form.form-pesquisa
  width 775px
  background-color #fff
  border-radius 3px
  height 48px
  margin-top 4px
  position relative
  i.material-icons
    color #c3c3c3
    font-size 24pt
    padding 8px 15px
  input.campo-pesquisa
    border 0
    color #c3c3c3
    font-size 16px
    font-family 'montserrat',Arial,sans-serif
    height 48px
    z-index 3
    padding 0 0 0 61px
    background-color transparent
    position absolute
    left 0
    width calc(100% - 154px)
  button.btn-pesquisa
    width 92px
    border-radius 0 3px 3px 0
header.topo
  position fixed
  top 0
  left 0
  height 116px
  background-color #ffcd00
  width 100%
  z-index 101
  .barra-pesquisa
    height 85px
    padding-top 15px
    display flex
    justify-content space-between
    .logo
      width 200px
      padding-left 10px
      min-width 100px
      img
        max-width 86px
    .perfil
      width 200px
      padding 10px 10px 0 0
      min-width 65px
      .perfil-container
        cursor pointer
        float right
        padding 0 6px
        position relative
        .avatar
          float right
          position relative
          display block
          img
            cursor pointer
            width 40px
            height 40px
            border-radius 20px
          .icone-avatar
            width 15px
            height 17px
            position absolute
            bottom 0
            right -4px
            z-index 1
            background url(https://imagebuscape-a.akamaihd.net/material/icons/icoProtegeAtivado.svg) no-repeat left center transparent;
            visibility visible
        &:hover
          .dropdown
            display block
            visibility visible
            opacity 1
            top 50px
        .dropdown
          opacity 0
          position absolute
          background-color #fff
          min-width 216px
          box-shadow 0 2px 3px 0 rgba(0,0,0,.12)
          z-index 10
          top 60px
          border-radius 3px
          right 0
          visibility hidden
          transition all .3s ease-out
          &:before
            position absolute
            top -6px
            right 20px
            display inline-block
            border-right 10px solid transparent
            border-bottom 10px solid #ffffff
            border-left 10px solid transparent
            content ''
          ul
            margin 20px 0
            padding 0
            li
              list-style none
              line-height 30px
              &:hover
                background-color #f2f2f2
              a
                display block
                color #757575
                padding-left 45px
                font-size 16px
                font-weight 300
                width 100%
                background url(https://imagebuscape-a.akamaihd.net/material/icons/icoSprite.png?v=1) no-repeat 0 0 transparent
                &.fav-ico
                  background-position 17px 7px
                &.prot-ico
                  background-position 17px -175px
                &.comp-ico
                  background-position 17px -37px
                &.perf-ico
                  background-position 17px -83px
                &.sair-ico
                  background-position 17px -130px
                  background-color #f2f2f2

  .menu
    background-color #ffdc4d
    height 31px
    box-shadow 1px 4px 8px -2px rgba(0,0,0,.45)
    nav
      &.categorias
        text-transform uppercase
        ul
          margin 0
          padding 0
          display flex
          justify-content space-between
          li
            list-style none
            display inline-block
            line-height 31px
            a
              padding 8px 0
              font-size 12px
              text-decoration none
              color #444

.breadcrumbs
  margin-top 116px
  padding 10px
  border-bottom 1px solid #ebebeb
  span
  a
    color: #aaa
    font-size 11px
    &.breadcrumbs-links
      color #000
    &.breadcrumbs-separador
      margin 0 5px
      font-size 16px
.produto
  padding-top 50px
  margin-bottom 50px
  display flex
  .galeria
    width 25%
    max-width 272px
    height 256px
    float left
    position relative
    overflow hidden
    .nav-galeria
      color rgba(0,0,0,.1)
      font-size 48pt
      position absolute
      top calc(50% - 32px)
      cursor pointer
      z-index 10
      user-select none
      &.anterior
        left 0
      &.proximo
        right 0
    .galeria-container
      height 200px
      display flex
      flex-direction row
      position absolute
      top 0
      //left 0
      //transform translate3d(-272px,0,0)
      //transition-duration .3s
      .galeria-item
        width 272px
        height 200px
        margin 0 auto
        display block
        .foto
          margin 0 auto
          max-height 200px
          max-width 100%
          padding 1em 0
          width auto
          display block
    .nav-fotos
      display flex
      justify-content center
      position absolute
      bottom -10px
      width 100%
      height 40px
      span
        width 10px
        height 10px
        background-color #d8d8d8
        display block
        border-radius 50%
        margin 3px
        cursor pointer
        &.active
          background-color #ffc627
  .detalhes
    width 500px
    display block
    position relative
    margin-left 10px
    text-align left
    float left
    h1
      padding 0
      margin 0
      &.nome
        font-size 1.65em
        font-weight lighter
        color #444
        padding-bottom 0.5em
    .infos
      padding 1em 0
      display inline-block
      width 100%
      border-bottom 2px solid #ebebeb
      span
        &.texto-preco
          width 50%
          color #444
          font-size 0.9em
          display block
          float left
          position relative
          .preco
            color #22b14c
            padding 0 0 0 8px
            &:hover
              text-decoration underline
            .preco-inteiro
              font-size 1.9em
              padding 0 0 0 5px
      .historico-preco
        width 50%
        display inline-block
        background url('http://image.buscape.com/material/icons/ic_graph.svg') no-repeat 7px center
        a
          padding-left 50px
          text-align left
          float left
          margin-right 30px
          &:hover
            text-decoration underline
    .avaliacao
      border-bottom 2px solid #ebebeb
      position relative
      display block
      float left
      padding-bottom 20px
      width 100%
      .rating
        float left
        display block
        position relative
        width 50%
        margin-top 1em
        span
          width 32px
          height 32px
          background-repeat no-repeat
          float left
          margin-right 8px
          cursor pointer
          &.estrela
            background-image url(http://image.buscape.com/material/icons/icon-star-full.svg)
          &.meia-estrela
            background-image url(http://image.buscape.com/material/icons/icon-star-half.svg)
        a
          margin-top 10px
          display inline-block
      .enviar-avaliacao
        height 70px
        width 50%
        float right
        display block
        position relative
        a
          margin-top 30px
          display block
          width 100%
          margin-left 10px
.cards
  display flex
  justify-content space-around
  width 100%
  margin 50px 0
  user-select none
  .card
    position relative
    width calc(25% - 24px)
    background #fff
    box-shadow 0 2px 5px 0 rgba(0,0,0,.08)
    height 400px
    margin 0 13px
    padding 16px 16px 24px
    .card-link
      position relative
      width 100%
      height 238px
      display block
      cursor pointer
      .card-imagem
        width 100%
        img
          width 100%
          max-width 140px
          height auto
          margin: 4px auto 18px;
          display block
      .card-descricao
        max-height 50px
        color #757575
        font-size 12px
      .card-favorito
        float right
        z-index 80
        position absolute
        right 0
        .coracao
          &.active
            fill #FEC53A

    .card-preco
      display flex
      justify-content space-between
      padding 0 16px
      position absolute
      bottom 0
      left 0
      height 100px
      width 100%
      border-top: 1px solid #e0e0e0;
      background-color #f9f9f9
      align-items: center;
      .btn-card-ver
        width 30px
        height 60px
        border-radius 3px
        position relative
        .icone-flecha
          display: inline-block
          position: absolute
          top 25px
          left 35%
          width 0
          height 0
          border-top 5px solid transparent
          border-bottom 5px solid transparent
          border-left 8px solid #fff
          content ""
      .card-preco-container
        width calc(100% - 40px)
        height 75px
        span
        a
          font-size 11px
          display block
        .card-melhor-preco
          margin-bottom 6px
          color #000
          &:hover
            color rgba(195,195,195,.6)
        .card-preco-parcelado
          font-size 18px
        .card-preco-avista
          font-size 13px
          margin-bottom 6px

.tooltip
  .tooltip-text
    visibility hidden
    width 90px
    background-color black
    color #fff
    text-align center
    border-radius 6px
    padding 5px
    position absolute
    z-index 1
    bottom 150%
    left 50%
    margin-left -45px
    font-size 13px
    transition-duration .5s
    opacity 0

.tooltip
  .tooltip-text::after
    content ""
    position absolute
    top 100%
    left 50%
    margin-left -5px
    border-width 5px
    border-style solid
    border-color black transparent transparent transparent

.tooltip.open
  .tooltip-text
    visibility visible
    opacity 1
